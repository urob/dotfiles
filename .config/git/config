    ui = true
[core]
    editor = nvim
    pager = diff-so-fancy | less --tabs=4 -RFX
[merge]
    tool = nvim
[mergetool "nvim"]
    cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
